{
  "name": "auto-validate",
  "version": "1.0.1",
  "description": "validate object by decorators in typescript",
  "main": "index.js",
  "sideEffects": false,
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "mocha --require ts-node/register test/*.ts",
    "ts": "ts-node",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "fix": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "generate-dts": "tsc src/index.ts -d -t es6 --module commonjs --emitDeclarationOnly --declarationDir dts",
    "clean-dts": "rm -r dts",
    "bundle-dts": "dts-bundle --name auto-validate --main dts/index.d.ts --out ../index.d.ts",
    "dts": "npm run generate-dts&&npm run bundle-dts&&npm run clean-dts",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run type-check&&npm run lint&&webpack&&npm run dts"
  },
  "keywords": [
    "validate",
    "decorator",
    "typescript"
  ],
  "author": "fisher <i.yu@qq.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/fishen/auto-validate.git"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "secure-template": "^1.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "dts-bundle": "^0.7.3",
    "mocha": "^6.0.2",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.14.0",
    "typescript": "^3.3.3333",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-node-externals": "^1.7.2"
  }
}
